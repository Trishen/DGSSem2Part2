            <td align="center" height="50">
                @Html.DisplayFor(model => model.Th2)
            </td>
            <td align="center" height="50">
                @Html.DisplayFor(model => model.Th3)
            </td>
            <td align="center" height="50">
                @Html.DisplayFor(model => model.Th4)
            </td>
            <td align="center" height="50">
                @Html.DisplayFor(model => model.Th5)
            </td>
            <td align="center" height="50">
                @Html.DisplayFor(model => model.Th6)
            </td>

        </tr>
        <tr>
            <td align="center" height="50">
                <b>Friday</b>
            </td>
            <td align="center" height="50">
                @Html.DisplayFor(model => model.F1)
